{
  "name": "@workopilot/cli",
  "version": "0.1.0",
  "description": "CLI for WorkoPilot task management",
  "type": "module",
  "bin": {
    "workopilot": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile dist/workopilot",
    "build:linux": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/workopilot-linux",
    "build:mac": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/workopilot-mac",
    "build:windows": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile dist/workopilot-windows.exe"
  },
  "dependencies": {
    "@workopilot/sdk": "workspace:*",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
